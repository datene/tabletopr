<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">



    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

    <!-- Notification -->


    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <div class="badge-container" data-toggle="dropdown">
          <i class="fa fa-map"></i>
          <!-- ADD SOMETHING TO DISPLAY ACTIVITY HERE -->
          <div class="badge badge-red"><%= current_user.games.count %></div>
        </div>
        <% unless current_user.games.count == 0 %>
        
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <% current_user.games.each do |game| %>
          <li>
            <%= link_to game.name, game_path(game) %>
          </li>
          <% end %>
        </ul>
        <% end %>
      </div>
    </div>
    <div class="dropdown">
      <div class="image-link dropdown-toggle" data-toggle="dropdown">
        <%= image_tag current_user.facebook_picture_url, class: "account-link", id: "navbar-wagon-menu" %>
        <div class="gradient"></div>
      </div>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to "#" do %>
          <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
          <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
    </div>

    <% else %>

    <!-- Login text link -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
</div>

